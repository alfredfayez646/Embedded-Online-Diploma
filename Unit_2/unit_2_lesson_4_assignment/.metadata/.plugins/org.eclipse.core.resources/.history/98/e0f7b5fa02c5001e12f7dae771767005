#include "stdio.h"

void main() {

	int x[2][2];
	int y[2][2];
	int i, j;
	for (i=0;i<2;i++){
		for(j=0;j<0;j++){
			printf("enter a%d%d \n",i+1,j+1);
			scanf("%d\n",x[i][j]);
		}
	}
	for (i=0;i<2;i++){
		for(j=0;j<0;j++){
			printf("enter b%d%d \n",i+1,j+1);
			scanf("%d\n",y[i][j]);
		}
	}
	for (i=0;i<2;i++){
		for(j=0;j<0;j++){
			x[i][j] += y[i][j];
		}
	}
	printf("the summation of the 2 matrices is :\n");
	for (i=0;i<2;i++){
		for(j=0;j<0;j++){
			printf("enter a%d%d",i+1,j+1);
			scanf("%d",x[i][j]);
		}
	}


	return 0;
}
